<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <FS_INDEX name="st_videoId" height="1" useLanguages="yes" viewMode="details">
    <LANGINFOS>
      <LANGINFO lang="*" label="YouTube Video"/>
    </LANGINFOS>
    <SOURCE name="YouTube-DAP-Integration/YoutubeVideoDataAccessPlugin"/>
  </FS_INDEX>

  <FS_CATALOG name="st_items" useLanguages="no" viewMode="headers">
    <LANGINFOS>
      <LANGINFO lang="*" label="Items"/>
      <LANGINFO lang="DE" label="Elemente"/>
    </LANGINFOS>
    <TEMPLATES type="section">
      <TEMPLATE uid="shoppable_video_item"/>
    </TEMPLATES>
  </FS_CATALOG>

  <FS_BUTTON
    name="st_interactiveVideo"
    alwaysEnabled="no"
    hFill="no"
    onClick="class:InteractiveVideoButton"
    style="button"
    useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Open Video Editor"/>
      <LANGINFO lang="DE" label="Video Editor anzeigen"/>
    </LANGINFOS>
    <PARAMS>
      <PARAM name="catalog">#field.st_items</PARAM>
      <PARAM name="videoUrlResolver">class:InteractiveVideoUrlParser</PARAM>
      <PARAM name="videoUrlPattern">https://www.youtube.com/watch?v=${id}</PARAM>
      <PARAM name="videoIdField">#field.st_videoId</PARAM>
    </PARAMS>
  </FS_BUTTON>

</CMS_MODULE>