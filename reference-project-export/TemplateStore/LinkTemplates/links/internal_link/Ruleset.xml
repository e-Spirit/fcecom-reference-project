<?xml version="1.0" encoding="UTF-8"?>
<RULES>
	<!-- mandatory -->
	<RULE>
		<WITH>
			<PROPERTY name="EMPTY" source="lt_pageref"/>
		</WITH>
		<DO>
			<NOT>
				<VALIDATION scope="SAVE">
					<PROPERTY name="VALID" source="lt_pageref"/>
					<MESSAGE lang="*" text="Please select a page"/>
					<MESSAGE lang="DE" text="Bitte geben Sie eine Inhaltsreferenz an!"/>
				</VALIDATION>
			</NOT>
		</DO>
	</RULE>
</RULES>